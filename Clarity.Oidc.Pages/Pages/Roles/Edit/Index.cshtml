@page "{id:guid}"
@model IndexModel

@{
    ViewData["Title"] = $"Edit \"{Model.Role.Name}\" Details";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Role.Id" />
    <div class="form-group">
        <label asp-for="Role.Name"></label>
        <input asp-for="Role.Name" class="form-control" required />
        <span asp-validation-for="Role.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <h4>
            <button type="submit" class="btn btn-primary" title="Save Role Details">
                Save
            </button> |
            <a asp-page="../Details/Index" asp-route-id="@Model.Role.Id" title="Role Details">
                <i class="fal fa-info-square"></i> Details
            </a> |
            <a asp-page="../Index" title="Roles">
                <i class="fal fa-list"></i> List
            </a>
        </h4>
        <hr />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
