@page "{id:guid}"
@model DeleteModel

@{
    ViewData["Title"] = $"Delete \"{Model.Role.Name}\"";
}

<div class="row">
    <div class="col">
        <hr />
        <h2>
            <i class="fal fa-id-badge"></i> @ViewData["Title"]
        </h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Role.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Role.Name)
            </dd>
        </dl>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col">
        <form method="post">
            <input type="hidden" asp-for="Role.Id" />
            <h4>
                <button type="submit" class="btn btn-danger" title="Delete Role">
                    Delete
                </button> |
                <a asp-page="./Details/Index" asp-route-id="@Model.Role.Id" title="Role Details">
                    <i class="fal fa-info-square"></i> Details
                </a> |
                <a asp-page="./Index" title="Roles">
                    <i class="fal fa-list"></i> List
                </a>
            </h4>
        </form>
        <hr />
    </div>
</div>
