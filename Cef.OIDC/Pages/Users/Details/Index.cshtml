@page "{id:guid}"
@using Kendo.Mvc.UI
@model IndexModel

@{
    ViewData["Title"] = $"\"{Model.UserModel.Email}\" Details";
}

<div class="row">
    <div class="col-12 col-md-6">
        <div class="font-weight-bold">
            @(Html.Kendo().CheckBox()
                  .Name("User.EmailConfirmed")
                  .Enable(false)
                  .Label("Email Confirmed")
                  .Checked(Model.UserModel.EmailConfirmed))
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="font-weight-bold">
            @(Html.Kendo().CheckBox()
                  .Name("User.TwoFactorEnabled")
                  .Enable(false)
                  .Label("Two-factor Enabled")
                  .Checked(Model.UserModel.TwoFactorEnabled))
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-6">
        <div class="font-weight-bold">
            @(Html.Kendo().CheckBox()
                  .Name("User.PhoneNumberConfirmed")
                  .Enable(false)
                  .Label("Phone Number Confirmed")
                  .Checked(Model.UserModel.PhoneNumberConfirmed))
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="font-weight-bold">
            @(Html.Kendo().CheckBox()
                  .Name("User.LockoutEnabled")
                  .Enable(false)
                  .Label("Lockout Enabled")
                  .Checked(Model.UserModel.LockoutEnabled))
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-12 col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.UserModel.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserModel.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UserModel.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserModel.UserName)
            </dd>
        </dl>
    </div>
    <div class="col-12 col-md-6">
        <dl>
            @{
                if (!string.IsNullOrEmpty(Model.UserModel.PhoneNumber))
                {
                    <dt>
                        @Html.LabelFor(model => model.UserModel.PhoneNumber, "Phone Number")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserModel.PhoneNumber)
                    </dd>
                }
            }
            <dt>
                @Html.LabelFor(model => model.UserModel.AccessFailedCount, "Access Failed Count")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserModel.AccessFailedCount)
            </dd>
        </dl>
    </div>
</div>
<hr />
<h4>
    <a asp-page="../Index" title="Users">
        <i class="fal fa-list"></i> List |
    </a>
    <a asp-page="../Edit/Index" asp-route-id="@Model.UserModel.Id" title="Edit User Details">
        <i class="fal fa-edit"></i> Edit
    </a> |
    <a asp-page="../Delete" asp-route-id="@Model.UserModel.Id" title="Delete User">
        <i class="fal fa-trash"></i> Delete
    </a>
</h4>
<hr />
