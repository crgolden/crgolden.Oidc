@page "{id:guid}"
@model IndexModel

@{
    Layout = "_EditLayout";
    ViewData["Title"] = "Edit User Properties";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserModel.Id" />
    <div class="form-group">
        <label asp-for="UserModel.Email"></label>
        <input asp-for="UserModel.Email" class="form-control" required />
        <span asp-validation-for="UserModel.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <h4>
            <button type="submit" class="btn btn-primary" title="Save User Properties">
                Save
            </button> |
            <a asp-page="../Details/Index" asp-route-id="@Model.UserModel.Id" title="User Properties">
                <i class="fal fa-info-square"></i> Details
            </a> |
            <a asp-page="../Index" title="Users">
                <i class="fal fa-list"></i> List
            </a>
        </h4>
        <hr />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
