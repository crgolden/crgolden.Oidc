@page "{id:guid}"
@model DeleteModel

@{
    ViewData["Title"] = $"Delete \"{Model.UserModel.Email}\"";
}

<div class="row">
    <div class="col">
        <hr />
        <h2>
            <i class="fal fa-user"></i> @ViewData["Title"]
        </h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.UserModel.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserModel.Email)
            </dd>
        </dl>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col">
        <form method="post">
            <input type="hidden" asp-for="UserModel.Id" />
            <h4>
                <button type="submit" class="btn btn-danger" title="Delete User">
                    Delete
                </button> |
                <a asp-page="./Details/Index" asp-route-id="@Model.UserModel.Id" title="User Details">
                    <i class="fal fa-info-square"></i> Details
                </a> |
                <a asp-page="./Index" title="Users">
                    <i class="fal fa-list"></i> List
                </a>
            </h4>
        </form>
        <hr />
    </div>
</div>
