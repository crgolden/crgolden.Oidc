@page
@using Kendo.Mvc.UI
@model IndexModel

@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col">
        <hr/>
        <div class="row">
            <div class="col">
                <h2>
                    <i class="fal fa-user"></i> @ViewData["Title"]
                </h2>
            </div>
            <div class="col">
                <h2 class="float-md-right">
                    <a asp-page="./Create" title="Create User">
                        <i class="fal fa-plus"></i> Create User
                    </a>
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <hr/>
        @(Html.Kendo().Grid(Model.Users)
              .Name("grid")
              .Columns(columns => columns.Bound(c => c.Email))
              .Sortable(sort => sort.AllowUnsort(false))
              .Filterable(filterable => filterable.Mode(GridFilterMode.Row))
              .Pageable(pageable => pageable.ButtonCount(5))
              .DataSource(dataSource => dataSource
                  .Ajax()
                  .Sort(sort => sort.Add(nameof(Models.User.Email)).Ascending())
                  .PageSize(5)
                  .ServerOperation(false))
              .ClientRowTemplate(
                  "<tr data-uid='#: uid #'>" +
                  "<td>" +
                  "<a href='/users/details/#:data.Id#'>#:data.Email#</a>" +
                  "</td>" +
                  "</tr>"))
        <hr/>
    </div>
</div>
