@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="row">
    <div class="col-12">
        <hr />
        <h2><i class="fal fa-sign-in"></i> @ViewData["Title"]</h2>
        <hr />
        <p>
            You have requested to log in with a recovery code. This login will not be remembered until you provide
            an authenticator app code at log in or disable 2FA and log in again.
        </p>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.RecoveryCode" class="col-4 col-form-label"></label>
                <div class="col-8">
                    <input asp-for="Input.RecoveryCode" class="form-control" placeholder="Recovery Code" autocomplete="off" />
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="Shared/_ValidationScriptsPartial" />
}