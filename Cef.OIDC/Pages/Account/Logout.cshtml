@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="row">
    <div class="col">
        <hr />
        <h2>
            <i class="fal fa-sign-out"></i> @ViewData["Title"]
        </h2>
        <hr />
        <p>
            Would you like to logout?
        </p>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col">
        <form method="post">
            <input type="hidden" name="logoutId" value="@Model.LogoutId" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Yes
                </button>
            </div>
        </form>
    </div>
</div>
