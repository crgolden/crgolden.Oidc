@{
    var id = Guid.Parse($"{ViewContext.RouteData.Values["id"]}");
    var activePage = System.IO.Path.GetFileNameWithoutExtension(ViewContext.ActionDescriptor.DisplayName);
}

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @(string.Equals(activePage, "Index", StringComparison.OrdinalIgnoreCase) ? "active" : null)"
           title="User Details"
           asp-page="./Index"
           asp-route-id="@id">
            Details
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(string.Equals(activePage, "Roles", StringComparison.OrdinalIgnoreCase) ? "active" : null)"
           title="User Roles"
           asp-page="./Roles"
           asp-route-id="@id">
            Roles
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(string.Equals(activePage, "Claims", StringComparison.OrdinalIgnoreCase) ? "active" : null)"
           title="User Claims"
           asp-page="./Claims"
           asp-route-id="@id">
            Claims
        </a>
    </li>
</ul>
