@page "{id:guid}"
@model IndexModel

@{
    ViewData["Title"] = $"Edit \"{Model.UserModel.Email}\" Details";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserModel.Id" />
    <div class="row">
        <div class="col-12 col-md-6">
            <input asp-for="UserModel.EmailConfirmed" class="k-checkbox" />
            <label asp-for="UserModel.EmailConfirmed" class="k-checkbox-label font-weight-bold">
                Email Confirmed
            </label>
        </div>
        <div class="col-12 col-md-6">
            <input asp-for="UserModel.TwoFactorEnabled" class="k-checkbox" />
            <label asp-for="UserModel.TwoFactorEnabled" class="k-checkbox-label font-weight-bold">
                Two-factor Enabled
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <input asp-for="UserModel.PhoneNumberConfirmed" class="k-checkbox" />
            <label asp-for="UserModel.PhoneNumberConfirmed" class="k-checkbox-label font-weight-bold">
                Phone Number Confirmed
            </label>
        </div>
        <div class="col-12 col-md-6">
            <input asp-for="UserModel.LockoutEnabled" class="k-checkbox" />
            <label asp-for="UserModel.LockoutEnabled" class="k-checkbox-label font-weight-bold">
                Lockout Enabled
            </label>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label asp-for="UserModel.Email" class="font-weight-bold"></label>
                <input asp-for="UserModel.Email" class="form-control" required />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.UserName" class="font-weight-bold"></label>
                <input asp-for="UserModel.UserName" class="form-control" required />
                <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label asp-for="UserModel.PhoneNumber" class="font-weight-bold">
                    Phone Number
                </label>
                <input asp-for="UserModel.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserModel.AccessFailedCount" class="font-weight-bold">
                    Access Failed Count
                </label>
                <input asp-for="UserModel.AccessFailedCount" class="form-control" />
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col">
            <h4>
                <button type="submit" class="btn btn-primary" title="Save User Details">
                    Save
                </button> |
                <a asp-page="../Details/Index" asp-route-id="@Model.UserModel.Id" title="User Details">
                    <i class="fal fa-info-square"></i> Details
                </a> |
                <a asp-page="../Index" title="Users">
                    <i class="fal fa-list"></i> List
                </a>
            </h4>
        </div>
    </div>
    <hr />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
